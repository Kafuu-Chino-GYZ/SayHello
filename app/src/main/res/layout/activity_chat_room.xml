<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_column="0"
        />
    <com.example.sayhello.CircleImageView
        android:id="@+id/member1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ptou"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_marginLeft="15dp"/>

    <com.example.sayhello.CircleImageView
        android:id="@+id/member2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ptou"
        android:layout_column="5"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_row="3" />

    <Button
        android:id="@+id/clobuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="3"
        android:text="开始"
        />

    <Button
        android:id="@+id/clobutc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="3"
        android:text="结束"
        />

    <Chronometer
        android:id="@+id/clo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:layout_row="8"
        android:layout_column="4"
        android:textColor="#2a00ff"
        android:textSize="20sp"
        />

    <TextView
        android:layout_height="200dp"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnSpan="6"
        android:layout_rowSpan="8"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/zhuomian"
        android:text="需要读的东西"
        android:textSize="30sp"
        />

    <com.example.sayhello.CircleImageView
        android:id="@+id/member3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ptou"
        android:layout_column="1"
        android:layout_row="8"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_marginLeft="15dp"/>

    <com.example.sayhello.CircleImageView
        android:id="@+id/member4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ptou"
        android:layout_column="5"
        android:layout_row="8"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:id="@+id/xuanxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_row="10"
        android:layout_column="6"
        android:src="@drawable/xuanxiang"
        android:background="#0000"
        android:entries="@array/xuan0"/>

</GridLayout>